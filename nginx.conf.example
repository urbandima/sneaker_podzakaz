# Nginx Configuration для СНИКЕРХЭД
# Скопируйте в /etc/nginx/sites-available/sneaker-head
# И создайте симлинк: ln -s /etc/nginx/sites-available/sneaker-head /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name sneaker-head.by www.sneaker-head.by;
    
    # Redirect www to non-www
    if ($host = 'www.sneaker-head.by') {
        return 301 https://sneaker-head.by$request_uri;
    }
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name sneaker-head.by www.sneaker-head.by;
    
    # SSL Certificates (получите через Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/sneaker-head.by/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sneaker-head.by/privkey.pem;
    
    # SSL Configuration (Mozilla Intermediate)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Redirect www to non-www
    if ($host = 'www.sneaker-head.by') {
        return 301 https://sneaker-head.by$request_uri;
    }
    
    # Document Root
    root /var/www/sneaker-head/web;
    index index.php index.html;
    
    charset utf-8;
    
    # Logging
    access_log /var/log/nginx/sneaker-head-access.log;
    error_log /var/log/nginx/sneaker-head-error.log;
    
    # ====================
    # SECURITY HEADERS
    # ====================
    
    # Prevent MIME sniffing
    add_header X-Content-Type-Options "nosniff" always;
    
    # Prevent clickjacking
    add_header X-Frame-Options "SAMEORIGIN" always;
    
    # XSS Protection
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Referrer Policy
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # HSTS (HTTP Strict Transport Security)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # Hide Nginx version
    server_tokens off;
    
    # ====================
    # GZIP COMPRESSION
    # ====================
    
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;
    gzip_disable "msie6";
    
    # ====================
    # BROTLI COMPRESSION (если установлен модуль)
    # ====================
    
    # brotli on;
    # brotli_comp_level 6;
    # brotli_types
    #     text/plain
    #     text/css
    #     text/xml
    #     text/javascript
    #     application/json
    #     application/javascript
    #     application/xml+rss
    #     application/rss+xml
    #     font/truetype
    #     font/opentype
    #     application/vnd.ms-fontobject
    #     image/svg+xml;
    
    # ====================
    # STATIC FILES CACHING
    # ====================
    
    # Images
    location ~* \.(jpg|jpeg|png|gif|ico|webp|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Fonts
    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # CSS and JavaScript
    location ~* \.(css|js)$ {
        expires 1M;
        add_header Cache-Control "public";
        access_log off;
    }
    
    # Media files
    location ~* \.(mp4|webm|ogg|ogv)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # ====================
    # BLOCK ACCESS
    # ====================
    
    # Block access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Block access to sensitive files
    location ~* (\.env|composer\.json|composer\.lock|\.git|\.gitignore|README\.md|package\.json|gulpfile\.js)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Block access to vendor, runtime, tests
    location ~ ^/(vendor|runtime|tests|migrations) {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # ====================
    # YII2 ROUTING
    # ====================
    
    location / {
        try_files $uri $uri/ /index.php?$args;
    }
    
    # PHP-FPM Configuration
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock; # Измените на вашу версию PHP
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # FastCGI Cache (опционально)
        # fastcgi_cache_bypass $skip_cache;
        # fastcgi_no_cache $skip_cache;
        # fastcgi_cache FASTCGI;
        # fastcgi_cache_valid 200 60m;
        
        # Увеличиваем таймауты для больших запросов
        fastcgi_read_timeout 300;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 256 16k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }
    
    # ====================
    # SPECIAL ROUTES
    # ====================
    
    # robots.txt
    location = /robots.txt {
        access_log off;
        log_not_found off;
    }
    
    # sitemap.xml
    location = /sitemap.xml {
        access_log off;
        log_not_found off;
    }
    
    # favicon.ico
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }
    
    # ====================
    # RATE LIMITING (защита от DDoS)
    # ====================
    
    # Раскомментируйте и настройте если нужно
    # limit_req_zone $binary_remote_addr zone=one:10m rate=5r/s;
    # limit_req zone=one burst=10 nodelay;
    
    # ====================
    # CLIENT SETTINGS
    # ====================
    
    client_max_body_size 20M;
    client_body_buffer_size 128k;
}

