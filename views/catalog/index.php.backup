// –ù–û–í–û–ï: –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ä–∞–∑–º–µ—Ä–Ω—ã—Ö —Å–µ—Ç–æ–∫ –≤ quick-filters
function switchSizeSystem(system) {
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—ã–±–æ—Ä –≤ localStorage
    localStorage.setItem('preferredSizeSystem', system);
    
