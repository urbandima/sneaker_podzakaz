    });
    document.querySelector(`.size-system-btn-small[data-system="${system}"]`).classList.add('active');
    
    // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ —á–∏–ø—ã
    document.querySelectorAll('.size-chip').forEach(chip => {
