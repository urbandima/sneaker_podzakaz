    });
    
    // –°–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä—É–µ–º —Å quick-filters
    document.querySelectorAll('.size-system-btn').forEach(btn => {
        btn.classList.remove('active');
    });
