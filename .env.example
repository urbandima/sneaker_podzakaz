# ===============================================
# ENVIRONMENT CONFIGURATION
# ===============================================
# Скопируйте этот файл в .env и заполните реальными значениями

# --- Application Environment ---
YII_ENV=dev                # dev | prod
YII_DEBUG=true             # true | false

# --- Security ---
COOKIE_VALIDATION_KEY=     # Генерируйте уникальный ключ: openssl rand -hex 32

# --- Database Configuration ---
DB_DSN=                    # Полный DSN, например: mysql:host=localhost;dbname=sneaker_db;charset=utf8mb4
# ИЛИ используйте отдельные параметры:
DB_HOST=localhost
DB_PORT=3306
DB_NAME=order_management
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# --- Database Performance ---
DB_SCHEMA_CACHE=false      # true для production (кеширование схемы БД)
DB_SCHEMA_CACHE_DURATION=3600  # Время жизни кеша схемы (секунды)
DB_TIMEOUT=5               # Таймаут подключения к БД (секунды)

# --- Email Configuration ---
MAIL_USE_FILE_TRANSPORT=true   # false для production (отправка реальных email)
MAIL_FROM_EMAIL=noreply@sneakerculture.by
MAIL_FROM_NAME=СникерКультура

# --- SMTP Settings (для production, когда MAIL_USE_FILE_TRANSPORT=false) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls        # tls | ssl

# --- Poizon API Configuration ---
POIZON_API_URL=https://api.poizon-parser.com/v1
POIZON_API_KEY=            # Ваш API ключ Poizon (если требуется)
POIZON_XML_URL=            # URL XML фида, например: https://s3.q-parser.ru/export/xxx/poizon.xml

# --- Currency Exchange Rate ---
CNY_TO_BYN_RATE=0.45       # Курс CNY -> BYN (обновляйте вручную или через API)

# --- Company Details ---
COMPANY_NAME=ООО "СникерКультура"
COMPANY_UNP=123456789
COMPANY_ADDRESS=г. Минск, ул. Тестовая, д. 1
COMPANY_PHONE=+375 29 123-45-67
COMPANY_EMAIL=info@sneakerculture.by

# --- Admin Contact ---
ADMIN_EMAIL=admin@sneakerculture.by
